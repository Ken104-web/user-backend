{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "lib": ["es2017"],
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "declaration": true,
      "declarationDir": "dist/types",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
    },
    "exclude": ["node_modules"]

}